<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="cmf_routing_auto.orm_auto_route_listener.class">Symfony\Cmf\Bundle\RoutingAutoBundle\Doctrine\Orm\AutoRouteListener</parameter>
        <parameter key="cmf_routing_auto.adapter.orm.class">Symfony\Cmf\Bundle\RoutingAutoBundle\Adapter\OrmAdapter</parameter>

    </parameters>

    <services>
        <!-- Adapters -->
        <service id="cmf_routing_auto.adapter.orm" class="%cmf_routing_auto.adapter.orm.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="wam.routing.content.router_enhancer"/>
            <!--<argument>/</argument>-->
            <!--<argument>%cmf_routing.route_entity.class%</argument>-->
        </service>

        <service id="cmf_routing_auto.orm_auto_route_listener" class="%cmf_routing_auto.orm_auto_route_listener.class%">
            <argument type="service" id="service_container"/>
            <tag name="doctrine.event_listener" event="onFlush"/>
            <tag name="doctrine.event_listener" event="postFlush"/>
            <tag name="doctrine.event_listener" event="postPersist"/>
        </service>

        <!--<service id="cmf_routing_auto.initializer" class="Doctrine\Bundle\ormBundle\Initializer\GenericInitializer">
            <argument>CmfRoutingAutoBundle</argument>
            <argument type="collection">
                <argument>%cmf_routing_auto.persistence.orm.route_basepath%</argument>
            </argument>
            <tag name="doctrine_orm.initializer"/>
        </service>-->
    </services>
</container>
